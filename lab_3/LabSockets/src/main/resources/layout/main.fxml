<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import org.fxmisc.richtext.InlineCssTextArea?>

<GridPane alignment="CENTER" cache="true" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121"
          xmlns:fx="http://javafx.com/fxml/1">

    <InlineCssTextArea fx:id="editorArea" style="-fx-font-size: 18px;" wrapText="true" GridPane.columnIndex="0"
              GridPane.rowIndex="1" prefWidth="500" prefHeight="250" GridPane.fillWidth="true"/>

    <Button fx:id="loadButton" style="-fx-font-size: 20px" text="Load" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

</GridPane>
